{
  "extends": "@tsconfig/node18/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "_version": "2.0.0",

  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "artillery", "data"]
}
